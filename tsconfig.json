{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS", // <--- CHANGE THIS LINE
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./", // Adjust rootDir to include the shared directory
    "baseUrl": "./",
    "paths": {
      "@components/*": ["src/components/*"],
      "@controllers/*": ["src/controllers/*"],
      "@models/*": ["src/models/*"],
      "@services/*": ["src/services/*"],
      "@utils/*": ["src/utils/*"],
      "@styles/*": ["styles/*"]
    }
  },
  "include": [
    "src/**/*",
    "shared/**/*" // Include the shared directory

  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}